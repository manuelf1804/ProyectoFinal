  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.navbar-custom.fixed-top
      .container
        a.navbar-brand(href="#") Home
        
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
              each menu in menuNames
                a.nav-link(href=menu.nombre) #{menu.nombre}
              if(username=='')
                a.nav-link(href="" data-toggle='dropdown') Login
                ul.dropdown-menu.dropdown-menu-right.mt-2
                  li.px-4.py-2
                    form.form(role='form' action='/Login' method='POST')
                      .form-group
                        input#user.form-control.form-control-sm(name='user' placeholder='Usuario', type='text', required)
                      .form-group
                        input#pass.form-control.form-control-sm(name='pass' placeholder='Contraseña', type='password', required)
                      .form-group
                        button.btn.btn-primary.btn-block(type='submit') Login
                      .form-group.text-center
                        small
                          a(href='#') Registrarme?
              else
                a.nav-link(href="" data-toggle='dropdown') #{username}
                ul.dropdown-menu.dropdown-menu-right.mt-2
                  li.px-4.py-2
                    a.dropdown-item(href='/Logout') Logout
